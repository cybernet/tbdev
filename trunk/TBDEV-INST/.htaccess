######## Simple ReWrite users id by DJLEE ########
RewriteEngine on
# For subdir installs just change to RewriteBase /subdirectory
RewriteBase /
RewriteRule ^(.*).usr$ userdetails.php?username=$1
##################################################
##################################################
#ErrorPages
ErrorDocument 400 /error.php?400
ErrorDocument 401 /error.php?401
ErrorDocument 403 /error.php?403
ErrorDocument 404 /error.php?404
ErrorDocument 500 /error.php?500
##################################################